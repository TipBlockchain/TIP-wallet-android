<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:spinnerMode">dropdown</item>
        <!--<item name="android:spinnerStyle">@style/AppTheme.TextViewLightContent</item>-->
        <item name="android:actionBarWidgetTheme">@style/Theme.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat.Light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Toolbar">
        <item name="android:editTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppTheme.ActionBar.NoTitle" parent="AppTheme.ActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient</item>
    </style>
    <style name="AppTheme.Popup">
        <item name="android:actionBarPopupTheme">@style/PopupTheme</item>
    </style>

    <style name="PopupTheme">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPink</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    <style name="AppTheme.ListTitle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_roman</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.EmptyText">
        <item name="android:textColor">@color/colorTipGray</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.SecondaryButton" parent="AppTheme.PrimaryButton">
        <item name="colorButtonNormal">@color/colorAppPurple</item>
    </style>

    <style name="AppTheme.WhiteText" parent="">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AppTheme.WhiteText.Title" parent="AppTheme.WhiteText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.WhiteText.Subtitle" parent="AppTheme.WhiteText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.WhiteTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorVeryLightGray</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>
    <style name="AppTheme.WhiteEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="AppTheme.TextViewRowTitle" parent="">
        <item name="android:fontFamily">@font/avenir_ltd_std_medium</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextViewSeedPhrase" parent="">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.TextViewRowSubtitle" parent="">
        <item name="android:fontFamily">@font/avenir_ltd_std_roman</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextViewLightTitle" parent="">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_medium</item>
    </style>
    <style name="AppTheme.TextViewLightSubtitle" parent="">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_medium</item>
    </style>

    <style name="AppTheme.TextViewLightContent" parent="">
        <item name="android:colorForeground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_light</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.TextViewLightNormal" parent="">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_roman</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextViewDarkNormal" parent="">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:fontFamily">@font/avenir_ltd_std_roman</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextInputLayout">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextInputLayout.hint">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="AppTheme.WhiteColorAccent">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="AppTheme.WhiteEditText.white" parent="Widget.AppCompat.EditText">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>
    <style name="AppTheme.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorAccent">@color/colorWhite</item>
        <item name="android:foregroundTint">@color/colorWhite</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
        <item name="android:dropDownItemStyle">@color/lightTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextBox">
        <item name="android:padding">10dp</item>
        <item name="android:colorBackground">@color/colorLightGray</item>
        <item name="android:textAppearance">@style/AppTheme.TextViewDarkNormal</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPink</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="placeholderName2">mike_styles184</style>
</resources>
