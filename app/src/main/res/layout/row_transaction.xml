<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatarIv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/avatar_placeholder"
        app:riv_border_color="@color/colorLightGray"
        app:riv_border_width="1dp"
        app:riv_corner_radius="30dp"
        app:riv_mutate_background="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fistnameTv"
                style="@style/AppTheme.TextViewRowTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_weight="0.6"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:text="@string/jane_smith"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/amountTv"
                style="@style/AppTheme.TextViewRowTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_weight="0.4"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:text="@string/placeholder_amount"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/receivedGreen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/messageTv"
                style="@style/AppTheme.TextViewRowSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.6"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:text="@string/name_placeholder" />

            <TextView
                android:id="@+id/timeTv"
                style="@style/AppTheme.TextViewRowSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0.4"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:text="@string/placeholder_txTime" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
