<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatarImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/avatar_placeholder"
        app:riv_border_color="@color/colorLightGray"
        app:riv_border_width="1dp"
        app:riv_corner_radius="30dp"
        app:riv_mutate_background="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/text_margin">

        <TextView
            android:id="@+id/usernameTv"
            style="@style/AppTheme.TextViewRowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/jane_smith"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/fistnameTv"
            style="@style/AppTheme.TextViewRowSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:text="@string/name_placeholder" />

    </LinearLayout>

</LinearLayout>
